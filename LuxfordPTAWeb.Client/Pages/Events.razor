<div class="alert alert-success text-center mt-4">
	<em>Mark your calendars and join us for these wonderful community events!</em><br />
	<strong>Email List</strong> - Contact us at: TBD
</div>


@code {
	// TODO: Add properties and methods for EF database integration
	// - Events list from database
	// - Event categories
	// - Filter methods for upcoming/past events
	// - Event details navigation
	private List<EventDto>? upcomingEvents;
	string testtext = string.Empty;

	protected override async Task OnInitializedAsync()
	{
		try
		{
			upcomingEvents = await Http.GetFromJsonAsync<List<EventDto>>("api/events/upcoming");
		}
		catch (Exception ex)
		{
			testtext = "Error loading events.";
			testtext += "<hr>" + ex.Message;
			testtext += "<hr>" + ex.StackTrace;
			testtext += "<hr>";
		}
		
	}

	public class EventDto
	{
		public string Title { get; set; } = string.Empty;
		public DateTime Date { get; set; }
		public string Description { get; set; } = string.Empty;
		public string Location { get; set; } = string.Empty;
	}


}
