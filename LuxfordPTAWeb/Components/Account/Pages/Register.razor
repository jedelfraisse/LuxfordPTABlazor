@page "/Account/Register"
@inject NavigationManager NavigationManager

<PageTitle>Registration Disabled</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">Registration Currently Disabled</h4>
                <p>
                    User registration is currently disabled for the Luxford PTA Event Management System. 
                    Account access is limited to PTA board members and authorized administrators.
                </p>
                <hr>
                <p class="mb-0">
                    If you are a PTA board member or volunteer who needs access, please contact the PTA administrators 
                    for account creation.
                </p>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house"></i> Return to Home
                </a>
                <a href="/Account/Login" class="btn btn-outline-primary ms-2">
                    <i class="bi bi-person"></i> Login (Existing Users)
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    // Registration is disabled - redirect or show message only
    protected override void OnInitialized()
    {
        // Optionally log the registration attempt
        // Could redirect immediately with: NavigationManager.NavigateTo("/");
    }
}
